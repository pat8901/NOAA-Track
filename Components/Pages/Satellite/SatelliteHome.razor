@page "/satellite"
@using NOAA_Track.Models
@using NOAA_Track.Database
@using NOAA_Track.Services
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<PageTitle>Satellite</PageTitle>
<h1>Satellite</h1>

<button class="btn-primary" onclick="@NavigationHandlerAdd">Add Satellite</button>

@if (update_table)
{
    <p>updating...</p>
}
else if (error_db != null)
{
    <p>@error_db</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Launch Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in satellite_list)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.LaunchDate</td>
                </tr>
            }
        </tbody>
    </table>
}

